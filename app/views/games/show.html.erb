<div id="chessboard">
  <div class="clearfix">
    <% (0..7).each do |row| %>
      <div>
        <% colors = row.odd? ? ["black", "white"] : ["white", "black"] %>

        <% (0..7).each do |col| %>
          <div class="<%= cycle(*colors) %>"></div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>
